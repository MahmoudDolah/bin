ffmpeg -video_size 1440x900 -framerate 25 -f x11grab -i :1+0,0 -f alsa -ac 2 -i pulse -acodec aac -strict experimental output.flv

# This one somehow works. Dont ask what the parameters mean. Stole the code
# from Luke Smith and changed it so that it works on my laptop

ffmpeg -y -f x11grab -framerate 60 -s $(xdpyinfo | grep dimensions | awk '{print $2;}') -i :1 -f alsa -i default -r 30 -strict -2 -c:v libx264rgb -c:a flac "$HOME/screencast-$(date '+%y%m%d-%H%M-%S').mp4"




